<h1>Merchant Dashboard</h1>
<div id="merchant-links">
  <%= link_to 'My Items', "/merchants/#{@merchant.id}/items" %>
  <%= link_to 'My Invoices', "/merchants/#{@merchant.id}/invoices" %>
</div>

<div id ="merchant-details">
  <p><%= @merchant.name %></p>
</div>

<div id="items-ready-to-ship">
  <h3>Items Ready To Ship</h3>
  <% @merchant.items_ready_to_ship.each do |invoice_item| %>
    <div id="invoice-item-<%= invoice_item.id %>">
      <p><%= invoice_item.id %> - 
        <%= invoice_item.item.name %> - 
        <%= link_to "Invoice ##{invoice_item.invoice.id}", "/merchants/#{@merchant.id}/#{invoice_item.invoice.id}" %> - 
        <%= invoice_item.invoice.formatted_date %>  
    </div>
    <% end %> 
</div>
